<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomPopupTextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/car_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/car_surface_dark</item>
        <item name="android:itemTextAppearance">@style/CustomPopupTextAppearance</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">@color/car_surface_dark</item>
        <item name="android:textColorPrimary">@color/car_text_primary</item>
        <item name="colorAccent">@color/car_accent_red</item>
    </style>


    <style name="Base.Theme.VehicleApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/car_surface_dark</item>
        <item name="colorOnPrimary">@color/car_text_primary</item>
        <item name="colorSecondary">@color/car_accent_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/car_accent_red</item>
        <item name="android:windowBackground">@color/car_background_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/car_surface_dark</item>
        <item name="colorSurface">@color/car_surface_dark</item>
        <item name="colorOnSurface">@color/car_text_primary</item>
        <item name="android:textColor">@color/car_text_primary</item>
        <item name="android:textColorHint">@color/car_text_secondary</item>
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:contextPopupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="Theme.VehicleApp" parent="Base.Theme.VehicleApp" />

</resources>